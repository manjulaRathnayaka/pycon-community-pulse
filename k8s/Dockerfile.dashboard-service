FROM python:3.11-slim

WORKDIR /app

COPY dashboard-service/requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

COPY shared /app/shared
COPY dashboard-service/main.py /app/
COPY dashboard-service/templates /app/templates

RUN useradd -u 10003 -m appuser && chown -R appuser:appuser /app
USER 10003

EXPOSE 8002

CMD ["python", "main.py"]
